                            <Label x:Name="labelChartXDurationArchive" Content="Długość osi X [s]" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
                            <Button x:Name="buttonChartXDurationSetArchive"  Content="Ustaw" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding ChartXDurationSet}" Margin="0,64,10,0">
