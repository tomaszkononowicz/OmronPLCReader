                                    <Binding Path="ChartTitle" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <rule:TextValidation ValidatesOnTargetUpdated="True" ValidationStep="RawProposedValue" CanBeEmpty="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
