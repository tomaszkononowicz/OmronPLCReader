                            <DatePicker x:Name="pickerChartXMinArchive" Height="auto" VerticalAlignment="Top" FirstDayOfWeek="Monday" SelectedDate="{Binding ChartDateXMin, UpdateSourceTrigger=PropertyChanged}" Margin="0,91,13,0" BorderBrush="{x:Null}" Width="30" HorizontalAlignment="Right"/>
                            <TextBox x:Name="textBoxChartXMaxArchive" Height="22" Margin="71,120,51,0" TextWrapping="Wrap" VerticalAlignment="Top">
