                            <Button x:Name="buttonChartYRangeSetArchive"  Content="Ustaw" Margin="0,176,61,0" VerticalAlignment="Top" Command="{Binding ChartYRangeSet}" HorizontalAlignment="Right" Width="36">
                                <Button.Style>
