                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding (Validation.HasError), ElementName=textBoxChartXMinArchive}" Value="false" />
                                                    <Condition Binding="{Binding (Validation.HasError), ElementName=textBoxChartXMaxArchive}" Value="false" />
