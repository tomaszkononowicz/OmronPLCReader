                            <Button x:Name="buttonChartShowArchive" Content="Pokaż cały wykres" VerticalAlignment="Top" Command="{Binding ChartShow}" Margin="10,222,10,0"/>
                            <Button x:Name="buttonChartXRangeSetArchive"  Content="Ustaw" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding ChartXRangeSet}" Margin="0,146,10,0">
                                <Button.Style>
