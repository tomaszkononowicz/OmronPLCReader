                        <Grid x:Name="groupBoxPlotGridArchive" Margin="5" Height="auto" >
                            <Label x:Name="labelChartTitleArchive" Content="Tytuł" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="textBoxChartTitleArchive" HorizontalAlignment="Left" Height="22" Margin="51,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Style="{StaticResource textBoxError}" IsEnabled="True"  ToolTip="Ustawia tytuł wykresu.">
                                <TextBox.Text>
                                    <Binding Path="ChartTitle" UpdateSourceTrigger="PropertyChanged">
